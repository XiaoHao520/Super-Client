<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.superschool.activity.MakeCommentActivity">

    <RelativeLayout

        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:background="@color/navactived"
        android:paddingLeft="15px"
        android:paddingRight="15px">

        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/back"
            android:layout_height="wrap_content"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="发表"
            android:textSize="@dimen/titletextsize" />

        <TextView
            android:id="@+id/send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="发送" />
    </RelativeLayout>

    <EditText

        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="300px"
        android:layout_below="@+id/head"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_marginTop="50px"
        android:background="#e2dddd"
        android:gravity="top"
        android:hint="试试"
        android:lines="20"
        android:minHeight="300px"
        android:padding="15px"
        android:textAlignment="textStart"
        android:textColor="#000"
        android:textColorHint="#605e5e" />
</RelativeLayout>
