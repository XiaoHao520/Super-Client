<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgmain"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"


    tools:context="com.superschool.activity.RegisterActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/navheight"
        android:background="@color/colorAccent">
        <ImageView
            android:layout_centerVertical="true"
            android:layout_width="@dimen/back"
            android:layout_height="@dimen/back"
            android:src="@drawable/back"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户注册"
            android:layout_centerInParent="true"
            android:textSize="@dimen/titletextsize"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100px"
        android:orientation="vertical"
        android:paddingLeft="100px"
        android:paddingRight="100px">
        <!--用户注册-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">


            <cn.finalteam.galleryfinal.widget.GFImageView
                android:id="@+id/addHeader"
                android:layout_width="200px"
                android:layout_height="200px"
                android:layout_centerHorizontal="true"
                android:layout_margin="0px"
                android:padding="0px"
                android:scaleType="fitXY"
                android:src="@drawable/me"
                android:textAlignment="center" />

        </RelativeLayout>


        <!--NetworkImageView-->
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80px"
            android:orientation="vertical">

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="120px"
                android:layout_marginTop="10px"
                android:background="#fff">

                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_width="80px"
                    android:layout_height="80px"
                    android:src="@drawable/email" />

                <EditText
                    android:layout_centerVertical="true"
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="120px"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:hint="邮箱"
                    android:textColor="#000"
                    android:textColorHint="#000"
                    android:theme="@style/MyEditText" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120px"
                android:layout_marginTop="10px"
                android:background="#fff">

                <ImageView                   android:layout_centerVertical="true"
                    android:layout_width="80px"
                    android:layout_height="80px"

                    android:src="@drawable/me" />

                <EditText                   android:layout_centerVertical="true"
                    android:id="@+id/username"
                    android:layout_width="match_parent"
                    android:layout_height="120px"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:hint="用户名"
                    android:textColor="#000"
                    android:textColorHint="#000"
                    android:theme="@style/MyEditText" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120px"
                android:layout_marginTop="10px"
                android:background="#fff">

                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_width="80px"
                    android:layout_height="120px"

                    android:src="@drawable/password" />

                <EditText
                    android:layout_centerVertical="true"
                    android:id="@+id/password1"
                    android:layout_width="match_parent"
                    android:layout_height="120px"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:hint="密码"
                    android:inputType="textPassword"
                    android:textColor="#000"
                    android:textColorHint="#000"
                    android:theme="@style/MyEditText" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120px"
                android:layout_marginTop="10px"
                android:background="#fff">

                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_width="80px"
                    android:layout_height="120px"

                    android:src="@drawable/password" />


                <EditText
                    android:layout_centerVertical="true"
                    android:id="@+id/password2"
                    android:layout_width="match_parent"
                    android:layout_height="120px"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:hint="密码"
                    android:inputType="textPassword"
                    android:textColor="#000"
                    android:textColorHint="#000"
                    android:theme="@style/MyEditText" />
            </RelativeLayout>

            <Button
                android:layout_marginTop="80px"
                android:background="@drawable/btn_ok"
                android:id="@+id/register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="注册" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
