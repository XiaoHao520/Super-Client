<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/bgmain"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.superschool.activity.ModifyInfoActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/navheight"
        android:background="@color/navactived"

        android:paddingLeft="@dimen/mainpadding"
        android:paddingRight="@dimen/mainpadding">

        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/back"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="修改资料"
            android:textSize="@dimen/titletextsize" />

    </RelativeLayout>


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="120px"
        android:orientation="vertical"
        android:paddingLeft="100px"
        android:paddingRight="100px">
        <!--用户注册-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <cn.finalteam.galleryfinal.widget.GFImageView
                android:id="@+id/userHeader"
                android:layout_width="300px"
                android:layout_height="300px"
                android:layout_centerHorizontal="true"
                android:src="@drawable/me" />

        </RelativeLayout>


        <!--NetworkImageView-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="150px"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120px"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="10px"
                android:background="#fff">

                <ImageView
                    android:layout_width="80px"
                    android:layout_height="80px"

                    android:layout_centerVertical="true"
                    android:padding="10px"
                    android:src="@drawable/me" />

                <EditText
                    android:id="@+id/nickname"
                    android:layout_width="match_parent"
                    android:layout_height="120px"
                    android:gravity="center"
                    android:hint="昵称"
                    android:textColor="#000"
                    android:textColorHint="@color/textbg"
                    android:theme="@style/MyEditText" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="80px"
                android:background="#fff">

                <ImageView
                    android:layout_width="80px"
                    android:layout_height="80px"
                    android:layout_centerVertical="true"
                    android:src="@drawable/school" />

                <EditText
                    android:id="@+id/school"
                    android:layout_width="match_parent"
                    android:layout_height="120px"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:hint="院校"
                    android:textColor="#000"
                    android:textColorHint="@color/textbg"
                    android:theme="@style/MyEditText" />
            </RelativeLayout>


            <Button
                android:id="@+id/save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="100px"
                android:background="@drawable/btn_ok"
                android:text="保存" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
